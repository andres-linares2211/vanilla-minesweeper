{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["es6", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": ["src/**/*.spec.ts"]
}
